# GACS Dashboard Environment Configuration
# Copy this file to .env and update with your actual values

# Application
APP_URL=https://youdomain.com
APP_ENV=production
APP_DEBUG=false

# Database Configuration
DB_HOST=localhost
DB_NAME=gacs-dev
DB_USER=gacs-dev
DB_PASSWORD=your_password_here

# Application Settings
APP_TIMEZONE=Asia/Jakarta
SESSION_NAME=GACS_SESSION
SESSION_LIFETIME=3600
SESSION_SECURE=true

# Default Admin Credentials (Change after first login!)
DEFAULT_USERNAME=user1234
DEFAULT_PASSWORD=mostech

# GenieACS (Optional - can be configured via web UI)
GENIEACS_HOST=acs.youdomain.com
GENIEACS_PORT=7557
GENIEACS_USER=
GENIEACS_PASS=

# MikroTik (Optional - can be configured via web UI)
MIKROTIK_HOST=
MIKROTIK_PORT=8728
MIKROTIK_USER=
MIKROTIK_PASS=

# Telegram Bot (Optional - can be configured via web UI)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_WEBHOOK_URL=

# Security
CSRF_TOKEN_LENGTH=32
PASSWORD_MIN_LENGTH=8
